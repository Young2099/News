<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.demo.panguso.mvp_mode.mvp.ui.activities.PhotoDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar" />

    <com.demo.panguso.mvp_mode.mvp.view.PhotoViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#000000" />

    <TextView
        android:id="@+id/photo_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:padding="@dimen/item_margin"
        android:layout_centerInParent="true"
        android:text="全世界谁倾听你"
        android:textColor="@color/primary_text_white"
        android:textSize="@dimen/medium" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
