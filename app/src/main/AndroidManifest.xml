<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.panguso.mvp_mode">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">
        <activity
            android:name=".mvp.ui.activities.NewsActivity"
            android:launchMode="singleTask"
            android:theme="@style/BaseAppTheme.NoTrans">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.ui.activities.NewsDetailActivity"
            android:theme="@style/BaseAppTheme.NoTrans" />
        <activity android:name=".mvp.ui.activities.SplashActivity" />
        <activity android:name=".mvp.ui.activities.PhotoActivity" />
        <activity android:name=".mvp.ui.activities.base.NewsChannelActivity"></activity>
    </application>

</manifest>